{
  "title": "Remap for terminal apps on macs",
  "description": "Emulate right ctrl in terminal apps",
  "rules": [
    {
      "description": "Right cmd a | Move cursor to beginning of the line",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$",
                "^io\\.alacritty$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Right cmd e | Move cursor to end of the line",
