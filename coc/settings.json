{
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "args": ["--stdio"],
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test",
        "diagnosticsOnSaveOnly": true
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "erb", "eruby", "markdown"]
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  },
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.maxWindowHeight": 20,
  "suggest.maxCompleteItemCount": 5,
  "coc.preferences.formatOnSaveFiletypes": [
    "elm",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "json",
    "haskell",
    "css",
    "scss",
    "sass",
    "html",
    "html.handlebars",
    "vue",
    "rust",
    "sh"
  ],
  "typescript.updateImportsOnFileMove.enable": true,
  "codeLens.enable": true,
  "prettier.eslintIntegration": true,
  "prettier.requireConfig": false,
  "eslint.autoFixOnSave": true,
  "eslint.quiet": true,
  "eslint.options": {
    "useEslintrc": false
  },
  "css.validate": false,
  "stylelint.enable": true,
  "stylelint.filetypes": ["css", "less", "scss", "sass", "vue", "html"],
  "vetur.useWorkspaceDependencies": true
}
